const orderFoodItems = document.querySelectorAll('.orderFood');
orderFoodItems.forEach((item) => {
    item.addEventListener('click', itemClick);
});

let totalPrice = parseInt(localStorage.getItem('totalPrice')) || 0;
const totalPriceElement = document.createElement('h3');
document.body.appendChild(totalPriceElement);
totalPriceElement.innerHTML = `Total Price: ${totalPrice} ils`;

function itemClick(e) {
    e.preventDefault();
    const item = e.currentTarget;
    const textBox = item.querySelector('p');
    const itemName = item.id;
    let price;

    if (itemName === 'bira') {
        price = 10;
    }
    else if (itemName === 'coca') {
        price = 8;
    }
    else if (itemName === 'cocktail') {
        price = 15;
    }

    totalPrice += price;
    localStorage.setItem('totalPrice', totalPrice);
    totalPriceElement.innerHTML = `Total Price: ${totalPrice} ils`;

    textBox.style.backgroundColor = 'darkblue';
    item.removeEventListener('click', itemClick);
}




totalPrice += price;
totalPriceElement.innerHTML = `Total Price: ${totalPrice} ils`;

    const h3 = document.createElement('h3');
    document.body.appendChild(h3);
    h3.innerHTML = `${itemName}: ${price}`;

    textBox.style.backgroundColor = 'darkblue';
    item.removeEventListener('click', itemClick);
    h3 = document.getElementById('h3');
